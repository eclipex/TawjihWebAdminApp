{% extends 'base.html.twig' %}

{% block body %}
    <h1>Domaines list</h1>

    <table>
        <thead>
            <tr>
                <th>Designation</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for domaine in domaines %}
            <tr>
                <td><a href="{{ path('domaine_show', { 'id': domaine.id }) }}">{{ domaine.designation }}</a></td>
                <td>{{ domaine.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('domaine_show', { 'id': domaine.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('domaine_edit', { 'id': domaine.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="">{{ knp_pagination_render(domaines) }}</div>
    <ul>
        <li>
            <a href="{{ path('domaine_new') }}">Create a new domaine</a>
        </li>
    </ul>
{% endblock %}
