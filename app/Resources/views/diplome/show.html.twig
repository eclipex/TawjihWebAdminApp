{% extends 'base.html.twig' %}

{% block body %}
    <h1>Diplome</h1>

    <table>
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ diplome.code }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ diplome.score }}</td>
            </tr>
            <tr>
                <th>Capacite</th>
                <td>{{ diplome.capacite }}</td>
            </tr>
            <tr>
