{% extends 'base.html.twig' %}

{% block body %}
    <h1>Diplomes list</h1>

    <table>
        <thead>
            <tr>
                <th>Code</th>
                <th>Score</th>
                <th>Capacite</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for diplome in diplomes %}
            <tr>
                <td><a href="{{ path('diplome_show', { 'id': diplome.id }) }}">{{ diplome.code }}</a></td>
                <td>{{ diplome.score }}</td>
                <td>{{ diplome.capacite }}</td>
                <td>{{ diplome.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('diplome_show', { 'id': diplome.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('diplome_edit', { 'id': diplome.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="pagination">{{ knp_pagination_render(diplomes) }}</div>
    <ul>
        <li>
            <a href="{{ path('diplome_new') }}">Create a new diplome</a>
        </li>
    </ul>
{% endblock %}
